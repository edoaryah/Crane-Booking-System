@model AspnetCoreMvcFull.ViewModels.ShiftManagement.ShiftViewModel
@{
  ViewData["Title"] = "Delete Shift";
  Layout = "_ContentNavbarLayout";
}

<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Delete Shift</h5>
  </div>
  <div class="card-body">
    <div class="alert alert-warning mb-3" role="alert">
      <h6 class="alert-heading mb-1">Confirmation</h6>
      <p class="mb-0">Are you sure you want to delete this shift? This action cannot be undone.</p>
    </div>

    <div class="table-responsive mb-3">
      <table class="table">
        <tbody>
          <tr>
            <th style="width: 30%; text-align: left; font-weight: 500; position: relative;">
              <span style="display: inline-block; width: calc(100% - 15px);">Shift Name</span><span
                style="position: absolute; right: 15px;">:</span>
            </th>
            <td>@Model.Name</td>
          </tr>
          <tr>
            <th style="text-align: left; font-weight: 500; position: relative;">
              <span style="display: inline-block; width: calc(100% - 15px);">Start Time</span><span
                style="position: absolute; right: 15px;">:</span>
            </th>
            <td>@Model.FormattedStartTime</td>
          </tr>
          <tr>
            <th style="text-align: left; font-weight: 500; position: relative;">
              <span style="display: inline-block; width: calc(100% - 15px);">End Time</span><span
                style="position: absolute; right: 15px;">:</span>
            </th>
            <td>@Model.FormattedEndTime</td>
          </tr>
          <tr>
            <th style="text-align: left; font-weight: 500; position: relative;">
              <span style="display: inline-block; width: calc(100% - 15px);">Status</span><span
                style="position: absolute; right: 15px;">:</span>
            </th>
            <td>
              @if (Model.IsActive)
              {
                <span class="badge bg-success">Active</span>
              }
              else
              {
                <span class="badge bg-secondary">Inactive</span>
              }
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
      <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">
          <i class="bx bx-arrow-back me-1"></i>Back to List
        </a>
        <button type="submit" class="btn btn-danger">
          <i class="bx bx-trash me-1"></i>Delete
        </button>
      </div>
    </form>
  </div>
</div>

@section PageScripts {
  <script>
    // Script untuk menghilangkan alert secara otomatis setelah 5 detik
    $(document).ready(function () {
      setTimeout(function () {
        $('.auto-close-alert').fadeOut('slow', function () {
          $(this).remove();
        });
      }, 5000); // 5000 milliseconds = 5 detik
    });
  </script>
}
