@using AspnetCoreMvcFull.Services.Role
@inject IRoleService RoleService

@{
  TempData.Keep();
  string? currentPage = ViewContext.HttpContext.Request.Path;

  // ✅ ROLE DETECTION for menu visibility
  var currentUser = User.FindFirst("ldapuser")?.Value ?? "";
  var userRoles = new List<string>();

  if (!string.IsNullOrEmpty(currentUser))
  {
    try
    {
      userRoles = await RoleService.GetUserRolesAsync(currentUser);
    }
    catch
    {
      userRoles = new List<string>();
    }
  }

  var isAdmin = userRoles.Contains("admin", StringComparer.OrdinalIgnoreCase);
  var isPic = userRoles.Contains("pic", StringComparer.OrdinalIgnoreCase);
  var isOperator = userRoles.Contains("operator", StringComparer.OrdinalIgnoreCase);
  var isMsd = userRoles.Contains("msd", StringComparer.OrdinalIgnoreCase);
  var isManager = userRoles.Contains("manager", StringComparer.OrdinalIgnoreCase);

  // ✅ VISIBILITY RULES
  var canAccessDashboard = isAdmin || isPic || isManager;
  var canAccessBilling = isAdmin || isPic;
  var canAccessCraneUsage = isAdmin || isPic || isOperator;

  var canAccessManagement = isAdmin || isPic;
  var canAccessRoleManagement = isAdmin;

  var canAccessMaintenanceForm = isAdmin || isMsd;
  var canAccessMaintenanceHistory = isAdmin || isPic || isMsd;

  var canAccessBookingForm = isAdmin || (!isPic && !isOperator && !isMsd && !isManager);
  var canAccessBookingHistory = isAdmin || isPic || isManager || (!isOperator && !isMsd);
}

<style>
  .menu-inner-shadow {
    @* color: aqua !important;
    background-color: aqua !important; *@
    top: 120px !important;
    /* Menambah jarak agar shadow tidak menutupi logo */
  }
</style>

<!-- Menu -->
@* ! Do this simple *@
<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">

  @* ! Hide app brand if navbar-full *@
  <div
    class='app-brand @((@ViewData["navbarFull"] != null && Convert.ToBoolean(@ViewData["navbarFull"])) ? "d-xl-none" : "")'>
    <a asp-controller="Dashboards" asp-action="Index" class="app-brand-link">
      <span class="app-brand-logo kpc">
        @await Html.PartialAsync("../_Partials/_KaltimPrimaCoal")
      </span>
      @* <span class="app-brand-text demo menu-text fw-bold ms-2">@TempData.Peek("appName")</span> *@
    </a>

    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
      <i class="bx bx-chevron-left bx-sm d-flex align-items-center justify-content-center"></i>
    </a>
  </div>

  <div class="menu-inner-shadow"></div>

  @* ! Full version menu-items *@
  <ul class="menu-inner py-1">

    <!-- Menu -->
    @* <li class="menu-header small text-uppercase"><span class="menu-header-text">Menu</span></li> *@

    <!-- Dashboard -->
    @if (canAccessDashboard)
    {
      <li class='menu-item@(currentPage == "/" ? " active" : "")'>
        <a asp-controller="Dashboards" asp-action="Index" class="menu-link">
          <i class="menu-icon tf-icons bx bx-home-smile"></i>
          <div class="text-truncate" data-i18n="Dashboards">Dashboard</div>
        </a>
      </li>
    }

    <li class='menu-item@(currentPage == "/Calendar" || currentPage == "/Calendar" ? " active" : "")'>
      <a asp-controller="Calendar" asp-action="Index" class="menu-link">
        <i class="menu-icon tf-icons bx bx-calendar"></i>
        <div class="text-truncate" data-i18n="Cards">Kalender</div>
      </a>
    </li>

    @if (canAccessCraneUsage)
    {
      <!-- Crane Usage Button -->
            <li class='menu-item@(currentPage.StartsWith("/CraneUsage") && !currentPage.StartsWith("/CraneUsage/Visualization") ? " active" : "")'>
        <a asp-controller="CraneUsage" asp-action="Index" class="menu-link">
          <i class="menu-icon tf-icons bx bx-time-five"></i>
          <div class="text-truncate" data-i18n="CraneUsage">Penggunaan Crane</div>
        </a>
      </li>
    }

    @if (canAccessCraneUsage)
    {
      <!-- Crane Usage Visualization Button -->
      <li class='menu-item@(currentPage == "/CraneUsage/Visualization" || currentPage.StartsWith("/CraneUsage/Visualization") ? " active" : "")'>
        <a asp-controller="CraneUsage" asp-action="Visualization" class="menu-link">
          <i class="menu-icon tf-icons bx bx-bar-chart-alt"></i>
          <div class="text-truncate" data-i18n="CraneUsage">Visualisasi Penggunaan</div>
        </a>
      </li>
    }

    @if (canAccessBilling)
    {
      <!-- Billing Menu -->
      <li class='menu-item@(currentPage == "/Billing" || currentPage.StartsWith("/Billing") ? " active" : "")'>
        <a asp-controller="Billing" asp-action="Index" class="menu-link">
          <i class="menu-icon tf-icons bx bx-receipt"></i>
          <div class="text-truncate" data-i18n="Billing">Penagihan</div>
        </a>
      </li>
    }

    <!-- ✅ CONDITIONAL: Booking Section - Based on specific roles -->
    @if (canAccessBookingForm || canAccessBookingHistory)
    {
      <li class="menu-header small text-uppercase"><span class="menu-header-text">Booking</span></li>

      @* Booking Form - Admin OR regular users (NOT PIC, Operator, MSD, Manager) *@
      @if (canAccessBookingForm)
      {
        <li class='menu-item@(currentPage == "/Booking" ? " active" : "")'>
          <a asp-controller="Booking" asp-action="Index" class="menu-link">
            <i class="menu-icon tf-icons bx bx-detail"></i>
            <div class="text-truncate" data-i18n="Cards">Form Booking</div>
          </a>
        </li>
      }

      @* Booking History - Admin OR PIC OR Manager *@
      @if (canAccessBookingHistory)
      {
        <li class='menu-item@(currentPage == "/BookingList" ? " active" : "")'>
          <a asp-controller="BookingList" asp-action="Index" class="menu-link">
            <i class="menu-icon tf-icons bx bx-history"></i>
            <div class="text-truncate" data-i18n="Cards">Riwayat Booking</div>
          </a>
        </li>
      }
    }

    <!-- ✅ CONDITIONAL: Maintenance Section - Based on specific roles -->
    @if (canAccessMaintenanceForm || canAccessMaintenanceHistory)
    {
      <li class="menu-header small text-uppercase"><span class="menu-header-text">Maintenance</span></li>

      @* Maintenance Form - Only for MSD *@
      @if (canAccessMaintenanceForm)
      {
        <li class='menu-item@(currentPage == "/Maintenance" ? " active" : "")'>
          <a asp-controller="Maintenance" asp-action="Index" class="menu-link">
            <i class="menu-icon tf-icons bx bx-detail"></i>
            <div class="text-truncate" data-i18n="Cards">Form Maintenance</div>
          </a>
        </li>
      }

      @* Maintenance History - Admin, PIC, or MSD *@
      @if (canAccessMaintenanceHistory)
      {
        <li class='menu-item@(currentPage == "/MaintenanceHistory" ? " active" : "")'>
          <a asp-controller="MaintenanceHistory" asp-action="Index" class="menu-link">
            <i class="menu-icon tf-icons bx bx-history"></i>
            <div class="text-truncate" data-i18n="Cards">Riwayat Maintenance</div>
          </a>
        </li>
      }
    }

    <!-- Management -->
    <!-- ✅ CONDITIONAL: Management Section - Only for Admin and PIC -->
    @if (canAccessManagement)
    {
      <li class="menu-header small text-uppercase"><span class="menu-header-text">Manajemen</span></li>

      <li class='menu-item@(currentPage == "/CraneManagement" ? " active" : "")'>
        <a asp-controller="CraneManagement" asp-action="Index" class="menu-link">
          <i class="menu-icon tf-icons bx bx-wrench"></i>
          <div class="text-truncate" data-i18n="Roles">Data Crane</div>
        </a>
      </li>

      <li class='menu-item@(currentPage == "/ShiftManagement" ? " active" : "")'>
        <a asp-controller="ShiftManagement" asp-action="Index" class="menu-link">
          <i class="menu-icon tf-icons bx bx-time"></i>
          <div class="text-truncate" data-i18n="Shifts">Data Shift</div>
        </a>
      </li>

      <li class='menu-item@(currentPage == "/HazardManagement" ? " active" : "")'>
        <a asp-controller="HazardManagement" asp-action="Index" class="menu-link">
          <i class="menu-icon tf-icons bx bx-cog"></i>
          <div class="text-truncate" data-i18n="Roles">Data Hazard</div>
        </a>
      </li>

      <li class='menu-item@(currentPage == "/UsageManagement" ? " active" : "")'>
        <a asp-controller="UsageManagement" asp-action="Index" class="menu-link">
          <i class="menu-icon tf-icons bx bx-cog"></i>
          <div class="text-truncate" data-i18n="Roles">Data Subkategori</div>
        </a>
      </li>
    }

    <!-- ✅ CONDITIONAL: Role Management - Only for Admin -->
    @if (canAccessRoleManagement)
    {
      <li class='menu-item@(currentPage == "/RoleManagement" ? " active" : "")'>
        <a asp-controller="RoleManagement" asp-action="Index" class="menu-link">
          <i class="menu-icon tf-icons bx bx-shield"></i>
          <div class="text-truncate" data-i18n="Roles">Data Role</div>
        </a>
      </li>
    }
  </ul>

</aside>
